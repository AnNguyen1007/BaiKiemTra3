<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIÊU NGÔN NGỮ "
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold" />



    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng chọn một ngôn ngữ bất kì để trải nghiệm "
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/radius"
                android:text="Tiếng Việt "
                android:id="@+id/btcong"/>

            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/radius"
                android:text="tiếng trung "
                android:id="@+id/bttru"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="200dp"
                android:background="@drawable/radius"
                android:layout_marginRight="10dp"
                android:text="Tiếng hàn"
                android:layout_height="100dp"
                android:id="@+id/btnhan"/>
            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="200dp"
                android:background="@drawable/radius"
                android:text="tiếng thái"

                android:layout_height="match_parent"
                android:id="@+id/btchia"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/radius"
            android:text="tiếng lào"
            android:id="@+id/btlogarit"/>

        <androidx.appcompat.widget.AppCompatButton

            android:layout_width="200dp"
            android:text="tiếng anh"
            android:background="@drawable/radius"
            android:layout_height="match_parent"
            android:id="@+id/btbinhphuong"/>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
